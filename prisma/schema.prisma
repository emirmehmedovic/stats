// ---------------------------------------------------------
// PRISMA CONFIG
// ---------------------------------------------------------

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------------------------------------
// ENUMS
// ---------------------------------------------------------

// Tipovi operacije letova (umjesto enum-a za fleksibilnost)
model OperationType {
  id          String   @id @default(cuid())
  code        String   @unique // SCHEDULED, CHARTER, MEDEVAC, CARGO, MILITARY, GENERAL_AVIATION
  name        String   // Redovan, Charter, Medicinska evakuacija, Cargo, Vojni, Generalna avijacija
  description String?  // Opcionalni opis
  isActive    Boolean  @default(true)
  flights     Flight[]
  flightTypeLinks OperationTypeFlightType[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Tipovi leta (npr. MED, VIP, CARGO, TRAINING)
model FlightType {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  description String?
  isActive    Boolean  @default(true)

  flights     Flight[]
  operationTypeLinks OperationTypeFlightType[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Veza tipova operacije i tipova leta (many-to-many)
model OperationTypeFlightType {
  operationType   OperationType @relation(fields: [operationTypeId], references: [id], onDelete: Cascade)
  operationTypeId String

  flightType   FlightType @relation(fields: [flightTypeId], references: [id], onDelete: Cascade)
  flightTypeId String

  @@unique([operationTypeId, flightTypeId])
  @@index([operationTypeId])
  @@index([flightTypeId])
}

enum FlightStatus {
  SCHEDULED
  OPERATED
  CANCELLED
  DIVERTED
}

enum DelayPhase {
  ARR
  DEP
}

enum BoardingStatus {
  IN_PROGRESS  // Boarding je u toku
  COMPLETED    // Boarding je završen, podaci agregirani
  CANCELLED    // Boarding je otkazan
}

enum PassengerBoardingStatus {
  PENDING   // Čeka boarding
  BOARDED   // Ukrcan
  NO_SHOW   // Nije se pojavio
}

enum ReportType {
  DAILY
  MONTHLY
  YEARLY
  COMPARATIVE
  ANALYTICS
  CUSTOM
}

enum ReportStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

// ---------------------------------------------------------
// MODUL 1 - STATISTIKA SAOBRAĆAJA
// ---------------------------------------------------------

// Aviokompanije
model Airline {
  id         String             @id @default(cuid())
  name       String
  icaoCode   String             @unique
  iataCode   String?
  country    String?
  address    String?            // Adresa aviokompanije
  logoUrl    String?            // URL to airline logo image
  flights    Flight[]
  delayCodes AirlineDelayCode[] // Many-to-many veza sa delay kodovima
  routes     AirlineRoute[]     // Rute koje aviokompanija leti

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Rute aviokompanija (za redovni saobraćaj)
model AirlineRoute {
  id          String   @id @default(cuid())
  airlineId   String
  airline     Airline  @relation(fields: [airlineId], references: [id], onDelete: Cascade)
  route       String   // Npr. "TZL-BSL", "TZL-MMX"
  destination String   // Naziv destinacije, npr. "Basel", "Malmö"
  country     String   // Zemlja destinacije, npr. "Switzerland", "Sweden"
  isActive    Boolean  @default(true)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([airlineId, route])
  @@index([airlineId])
}

// Aerodromi
model Airport {
  id         String   @id @default(cuid())
  iataCode   String   @unique
  icaoCode   String?  @unique
  name       String
  city       String?
  country    String
  isEU       Boolean?
  latitude   Float?
  longitude  Float?

  arrivals   Flight[] @relation("ArrivalAirport")
  departures Flight[] @relation("DepartureAirport")

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

// Tipovi aviona
model AircraftType {
  id        String   @id @default(cuid())
  model     String   @unique
  seats     Int
  mtow      Int      // Maximum Takeoff Weight (kg)
  flights   Flight[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Letovi
model Flight {
  id             String              @id @default(cuid())
  date           DateTime

  airline        Airline             @relation(fields: [airlineId], references: [id])
  airlineId      String

  aircraftType   AircraftType        @relation(fields: [aircraftTypeId], references: [id])
  aircraftTypeId String

  registration   String
  route          String
  
  operationType  OperationType @relation(fields: [operationTypeId], references: [id])
  operationTypeId String

  flightType   FlightType? @relation(fields: [flightTypeId], references: [id])
  flightTypeId String?

  // Kapacitet (realni kapacitet po letu)
  availableSeats Int?

  // Aerodromi
  arrivalAirport     Airport? @relation("ArrivalAirport", fields: [arrivalAirportId], references: [id])
  arrivalAirportId   String?
  departureAirport   Airport? @relation("DepartureAirport", fields: [departureAirportId], references: [id])
  departureAirportId String?

  // Arrival
  arrivalFlightNumber     String?
  arrivalScheduledTime    DateTime?
  arrivalActualTime       DateTime?
  arrivalPassengers       Int?
  arrivalMalePassengers   Int? // Muški putnici
  arrivalFemalePassengers Int? // Ženski putnici
  arrivalChildren         Int? // Djeca (spadaju u arrivalPassengers)
  arrivalInfants          Int? // Bebe (NE spadaju u arrivalPassengers)
  arrivalLoadFactor       Float? // Load factor u % (putnici / kapacitet * 100)
  arrivalBaggage          Int? // kg
  arrivalBaggageCount     Int? // broj komada prtljaga
  arrivalCargo            Int? // kg
  arrivalMail             Int? // kg
  arrivalStatus           FlightStatus @default(OPERATED)
  arrivalCancelReason     String?
  arrivalFerryIn          Boolean @default(false)

  // Departure
  departureFlightNumber     String?
  departureScheduledTime    DateTime?
  departureActualTime       DateTime?
  departureDoorClosingTime  DateTime? // NOVO: Vrijeme zatvaranja vrata
  departurePassengers       Int?
  departureMalePassengers   Int? // Muški putnici
  departureFemalePassengers Int? // Ženski putnici
  departureChildren         Int? // Djeca (spadaju u departurePassengers)
  departureInfants          Int? // Bebe (NE spadaju u departurePassengers)
  departureNoShow           Int? // Broj putnika koji se nisu pojavili (No Show)
  departureLoadFactor       Float? // Load factor u % (putnici / kapacitet * 100)
  departureBaggage          Int? // kg
  departureBaggageCount     Int? // broj komada prtljaga
  departureCargo            Int? // kg
  departureMail             Int? // kg
  departureStatus           FlightStatus @default(OPERATED)
  departureCancelReason     String?
  departureFerryOut         Boolean @default(false)

  // Operativni detalji
  handlingAgent String?
  stand         String?
  gate          String?

  // Meta / kvaliteta podataka
  dataSource      String  @default("MANUAL") // MANUAL, IMPORT_EXCEL, API...
  importedFile    String?
  createdByUserId String?
  updatedByUserId String?
  isLocked        Boolean @default(false)
  isVerified      Boolean @default(false)
  verifiedAt      DateTime?
  verifiedByUserId String?
  verifiedByUser  User?   @relation(fields: [verifiedByUserId], references: [id])

  // Relacija na kašnjenja
  delays FlightDelay[]

  // Relacija na boarding manifest
  boardingManifest BoardingManifest?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
  @@index([airlineId])
  @@index([route])
  @@index([arrivalAirportId])
  @@index([departureAirportId])
  @@index([operationTypeId])
  @@index([flightTypeId])
  @@index([aircraftTypeId])
  @@index([departureScheduledTime])  // Za predboarding today-flights query
  @@index([departureActualTime])  // Za filtering departed flights
  @@index([date, airlineId]) // Composite index za česte kombinacije
  @@index([date, route]) // Za rute analitiku u velikim opsezima
  @@index([date, operationTypeId]) // Za dashboard analytics
  @@index([date, departureScheduledTime]) // Za today-flights optimizaciju
}

// Verifikacija dnevnih operacija (po datumu)
model DailyOperationsVerification {
  id              String   @id @default(cuid())
  date            DateTime @unique
  verified        Boolean  @default(false)
  verifiedAt      DateTime?
  verifiedByUserId String?
  verifiedByUser   User?    @relation(fields: [verifiedByUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([date])
}

// ---------------------------------------------------------
// BOARDING MANIFEST (Temporary storage za predboarding)
// ---------------------------------------------------------

// Manifest upload za boarding proces (privremeni storage)
model BoardingManifest {
  id                String              @id @default(cuid())
  flightId          String              @unique
  flight            Flight              @relation(fields: [flightId], references: [id], onDelete: Cascade)

  // File storage
  originalFileName  String
  filePath          String              // Path do uploadovanog .txt fajla
  fileSize          Int

  // Metadata
  uploadedByUserId  String
  uploadedByUser    User                @relation(fields: [uploadedByUserId], references: [id])
  uploadedAt        DateTime            @default(now())

  // Boarding status
  boardingStatus    BoardingStatus      @default(IN_PROGRESS)
  startedAt         DateTime            @default(now())
  completedAt       DateTime?
  completedByUserId String?
  completedByUser   User?               @relation("CompletedBoarding", fields: [completedByUserId], references: [id])

  // Relacije
  passengers        ManifestPassenger[]

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([flightId])
  @@index([boardingStatus])
  @@index([uploadedByUserId])
}

// Pojedinačni putnik iz manifesta (privremeni storage)
model ManifestPassenger {
  id                String                   @id @default(cuid())
  manifestId        String
  manifest          BoardingManifest         @relation(fields: [manifestId], references: [id], onDelete: Cascade)

  // Podaci o putniku (iz manifesta)
  seatNumber        String?
  passengerName     String              // Format: "LASTNAME,FIRSTNAME"
  title             String              // MR, MS, CHD, MSTR, etc.
  passengerId       String?             // Passenger ID iz manifesta
  fareClass         String?
  confirmationDate  String?
  isInfant          Boolean             @default(false) // Parsiran iz (i) markera

  // Boarding status
  boardingStatus    PassengerBoardingStatus @default(PENDING)
  boardedAt         DateTime?

  // SSR kodovi ako treba
  ssrCodes          String?             // JSON array SSR kodova

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([manifestId])
  @@index([boardingStatus])
  @@index([passengerName])  // Za pretragu po imenu
  @@index([manifestId, boardingStatus])  // Composite - brže filtriranje po statusu u manifestu
  @@index([seatNumber])  // Za pretragu po sjedištu
}

// Delay kodovi (IATA ili interni)
model DelayCode {
  id          String             @id @default(cuid())
  code        String             @unique
  description String
  category    String             // npr. Carrier, ATC, Weather, Reactionary...

  delays   FlightDelay[]
  airlines AirlineDelayCode[] // Many-to-many veza sa aviokompanijama

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Kašnjenja po letu (više kodova po ARR/DEP ako treba)
model FlightDelay {
  id               String     @id @default(cuid())
  flight           Flight     @relation(fields: [flightId], references: [id], onDelete: Cascade)
  flightId         String
  phase            DelayPhase // ARR ili DEP
  delayCode        DelayCode  @relation(fields: [delayCodeId], references: [id])
  delayCodeId      String
  minutes          Int        // broj minuta za ovaj razlog
  isPrimary        Boolean    @default(true)
  comment          String?    // Komentar
  unofficialReason String?    // NOVO: Neoficijelni razlog kašnjenja (interno, kapetan ne zna)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([flightId])
  @@index([delayCodeId])
}

// Many-to-many veza između Airline i DelayCode
model AirlineDelayCode {
  id          String    @id @default(cuid())
  airline     Airline   @relation(fields: [airlineId], references: [id], onDelete: Cascade)
  airlineId   String
  delayCode   DelayCode @relation(fields: [delayCodeId], references: [id], onDelete: Cascade)
  delayCodeId String
  isActive    Boolean   @default(true) // Da li kompanija trenutno koristi ovaj kod

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([airlineId, delayCodeId])
  @@index([airlineId])
  @@index([delayCodeId])
}

// ---------------------------------------------------------
// MODUL 2 - RADNICI I LICENCE
// ---------------------------------------------------------

// Sektori/Odjeli
model Sector {
  id          String     @id @default(cuid())
  name        String     @unique
  code        String?    @unique // Kratki kod npr. "OPS", "SEC", "ADM"
  description String?
  color       String?    // Hex color za UI
  isActive    Boolean    @default(true)
  employees   Employee[]
  equipmentAssignments EquipmentAssignment[]
  services    Service[]
  positions   Position[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Tipovi licenci (reusable)
model LicenseType {
  id                   String    @id @default(cuid())
  name                 String    @unique // npr. "AVSEC Inspector", "Fire Safety", "First Aid"
  code                 String?   @unique // Kratki kod npr. "AVSEC", "FIRE", "FA"
  description          String?
  validityPeriodMonths Int?      // Period važenja u mjesecima (npr. 12, 24)
  requiresRenewal      Boolean   @default(true)
  isActive             Boolean   @default(true)
  category             String?   // npr. "Safety", "Security", "Operations"
  licenses             License[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Radnici
model Employee {
  id             String                @id @default(cuid())
  employeeNumber String                @unique
  firstName      String
  lastName       String
  email          String                @unique
  phone          String?
  nationalId     String?
  dateOfBirth    DateTime?
  hireDate       DateTime
  position       String
  department     String?               // DEPRECATED: koristiti sector umjesto ovoga
  sector         Sector?               @relation(fields: [sectorId], references: [id])
  sectorId       String?
  service        Service?              @relation(fields: [serviceId], references: [id])
  serviceId      String?
  jobPosition    Position?             @relation(fields: [jobPositionId], references: [id])
  jobPositionId  String?
  photo          String?               // URL to photo
  status         String                @default("ACTIVE") // ACTIVE, INACTIVE, ON_LEAVE
  licenses       License[]
  documents      EmployeeDocument[]
  notifications  LicenseNotification[]
  equipmentAssignments EquipmentAssignment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sectorId])
  @@index([serviceId])
  @@index([jobPositionId])
}

// Sluzbe/Odjeli u okviru sektora
model Service {
  id       String   @id @default(cuid())
  name     String
  code     String?
  sector   Sector   @relation(fields: [sectorId], references: [id], onDelete: Cascade)
  sectorId String
  positions Position[]
  employees Employee[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sectorId])
}

// Radne pozicije
model Position {
  id                String   @id @default(cuid())
  name              String
  code              String?
  plannedHeadcount  Int?
  requiredEducation String?
  sector            Sector   @relation(fields: [sectorId], references: [id], onDelete: Cascade)
  sectorId          String
  service           Service? @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId         String?
  employees         Employee[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sectorId])
  @@index([serviceId])
}

// Zaduzenja IT opreme
model EquipmentAssignment {
  id            String   @id @default(cuid())
  employee      Employee? @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId    String?
  sector        Sector?   @relation(fields: [sectorId], references: [id], onDelete: Cascade)
  sectorId      String?
  equipmentName String
  notes         String?
  assignedAt    DateTime @default(now())
  returnedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([employeeId])
  @@index([sectorId])
  @@index([equipmentName])
}

// Licence
model License {
  id                  String                @id @default(cuid())
  employee            Employee              @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId          String
  licenseType         String?               // DEPRECATED: koristiti licenseTypeId
  type                LicenseType?          @relation(fields: [licenseTypeId], references: [id])
  licenseTypeId       String?
  licenseNumber       String
  issuedDate          DateTime
  expiryDate          DateTime
  issuer              String?               // ko je izdao licencu
  status              String                @default("ACTIVE") // ACTIVE, EXPIRED, SUSPENDED
  requiredForPosition String?               // za koju poziciju je ključna
  documents           LicenseDocument[]
  notifications       LicenseNotification[]
  createdByUserId     String?
  updatedByUserId     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([employeeId])
  @@index([expiryDate])
  @@index([licenseTypeId])
}

// Dokumentacija licence
model LicenseDocument {
  id         String   @id @default(cuid())
  license    License  @relation(fields: [licenseId], references: [id], onDelete: Cascade)
  licenseId  String
  fileName   String
  filePath   String
  fileType   String
  fileSize   Int
  uploadedAt DateTime @default(now())

  @@index([licenseId])
}

// Dokumenti radnika (opšti dokumenti, ne vezani za licence)
model EmployeeDocument {
  id          String   @id @default(cuid())
  employee    Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  employeeId  String
  title       String   // Naziv dokumenta
  description String?  // Opis dokumenta
  fileName    String
  filePath    String
  fileType    String
  fileSize    Int
  category    String?  // npr. "Contract", "Certificate", "Personal", "Medical"
  uploadedAt  DateTime @default(now())

  @@index([employeeId])
  @@index([category])
}

// Notifikacije za istek licenci
model LicenseNotification {
  id               String    @id @default(cuid())
  employee         Employee  @relation(fields: [employeeId], references: [id])
  employeeId       String
  license          License   @relation(fields: [licenseId], references: [id])
  licenseId        String
  notificationDate DateTime
  sent             Boolean   @default(false)
  sentAt           DateTime?
  createdAt        DateTime  @default(now())

  @@index([employeeId])
  @@index([licenseId])
}

// ---------------------------------------------------------
// ANALYTICS & REPORTING
// ---------------------------------------------------------

// Izvještaji
model Report {
  id          String         @id @default(cuid())
  name        String
  type        ReportType
  parameters  Json           // Store filter parameters
  generatedAt DateTime       @default(now())
  generatedBy User           @relation(fields: [userId], references: [id])
  userId      String
  language    String         @default("bs") // bs, en, de
  format      String         // pdf, excel, json
  filePath    String?
  status      ReportStatus   @default(PENDING)
  isScheduled Boolean        @default(false)
  schedule    ReportSchedule?

  @@index([userId])
  @@index([generatedAt])
  @@index([type])
}

// Zakazivanje izvještaja
model ReportSchedule {
  id          String    @id @default(cuid())
  report      Report    @relation(fields: [reportId], references: [id], onDelete: Cascade)
  reportId    String    @unique
  frequency   String    // daily, weekly, monthly
  dayOfWeek   Int?      // 1-7 for weekly
  dayOfMonth  Int?      // 1-31 for monthly
  time        String    // HH:mm
  recipients  String[]  // email addresses
  isActive    Boolean   @default(true)
  lastRun     DateTime?
  nextRun     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([nextRun])
}

// Benchmark podaci za komparacije
model BenchmarkData {
  id        String   @id @default(cuid())
  date      DateTime
  metric    String   // passengers, flights, load_factor, etc.
  value     Float
  region    String?  // EU, NON_EU, TOTAL
  airline   String?
  route     String?
  createdAt DateTime @default(now())

  @@index([date, metric])
  @@index([airline])
}

// Prognoza i trend podaci
model ForecastData {
  id           String   @id @default(cuid())
  forecastDate DateTime
  metric       String
  predicted    Float
  confidence   Float    // 0-1 confidence interval
  actual       Float?   // popunjava se kada datum prođe
  model        String   // model name used for prediction
  createdAt    DateTime @default(now())

  @@index([forecastDate])
  @@index([metric])
}

// ---------------------------------------------------------
// USER MANAGEMENT
// ---------------------------------------------------------

enum UserRole {
  ADMIN
  MANAGER
  OPERATIONS
  VIEWER
  STW  // Ground staff - Predboarding access
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  role      UserRole @default(VIEWER)
  isActive  Boolean  @default(true)
  reports   Report[]
  dailyOperationsVerifications DailyOperationsVerification[]
  verifiedFlights Flight[]
  auditLogs AuditLog[]
  uploadedManifests     BoardingManifest[]
  completedBoardings    BoardingManifest[] @relation("CompletedBoarding")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id         String   @id @default(cuid())
  userId     String?
  action     String
  entityType String
  entityId   String?
  metadata   Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([entityType, entityId])
  @@index([createdAt])
}

// Rate limiting za login pokušaje
model LoginAttempt {
  id        String   @id @default(cuid())
  email     String   // Email koji se pokušava prijaviti
  ipAddress String?  // IP adresa za dodatnu zaštitu
  success   Boolean  @default(false) // Da li je pokušaj bio uspješan
  createdAt DateTime @default(now())

  @@index([email, createdAt])
  @@index([ipAddress, createdAt])
  @@index([createdAt]) // Za čišćenje starih zapisa
}
